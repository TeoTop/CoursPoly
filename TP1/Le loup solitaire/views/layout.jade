doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

  block link
    -var selected = 'Accueil'; //default

  -var menu = { 'Accueil': '/', 'Nouvelle partie': '/new_game', 'Chapitre': '/chap', 'Guide de jeu': '/help' };
  -var next_chap = 0;

  body
    nav(id="general_menu", class="style_menu")
      ul
        each val, key in menu
          if selected === key
            li.selected
              a(href=val, title=key)=key
          else
            li
              a(href=val, title=key)=key

    h1.site_title
      a(href="/" title="Le Loup Solitaire : Les Grottes de Katle")
        img(src="/images/title.png")


    div(id="backpack_box" class="box")
      div(class="box-content")
        h3 Sac à dos
        div(class="grid")
          span(class="row-1 col-1 ration")
          span(class="row-1 col-2 potion")
          span(class="row-1 col-3")
          span(class="row-1 col-4")
          span(class="row-2 col-1 potion")
          span(class="row-2 col-2")
          span(class="row-2 col-3")
          span(class="row-2 col-4")
      a(href="#")
    div(id="special_object" class="box")
      div(class="box-content")
        h3 Objets spéciaux
        div(class="grid")
          span(class="row-1 col-1 wastcost")
          span(class="row-1 col-2")
          span(class="row-1 col-3")
          span(class="row-1 col-4")
          span(class="row-2 col-1")
          span(class="row-2 col-2")
          span(class="row-2 col-3")
          span(class="row-2 col-4")
      a(href="#") 

    section(id="adventure_box" class="float-content")
      
    

    div(id="content" class="content")
      block content

    footer(class="center")
      p #[a(href="/", title="Acceuil") Acceuil] | #[a(href="/new_game", title="Nouvelle partie") Nouvelle partie] | #[a(href="/chap", title="Chapitre") Chapitre] | #[a(href="/help", title="Guide de jeu") Guide de jeu] 
      p Site créé avec Express, Jade et NodeJS dans le cadre du cours LOG4420.
